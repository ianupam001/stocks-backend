generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  email        String?  @unique
  phone        String   @unique
  name         String?
  roles        Roles[]  @default([USER])
  refreshToken String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum Roles {
  USER
  ADMIN
  MODERATOR
}
